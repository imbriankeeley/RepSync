//
// Release.xcconfig
// WorkoutTracker
//
// Configuration settings for Release builds
//

// Architectures
ONLY_ACTIVE_ARCH = NO
VALID_ARCHS = arm64 arm64e

// Build Options
ENABLE_BITCODE = NO
SWIFT_COMPILATION_MODE = wholemodule
SWIFT_OPTIMIZATION_LEVEL = -O
GCC_OPTIMIZATION_LEVEL = s

// Code Signing
CODE_SIGN_IDENTITY = iPhone Distribution
CODE_SIGN_STYLE = Manual
DEVELOPMENT_TEAM = // TODO: Add your team ID

// Deployment
INSTALL_PATH = $(LOCAL_APPS_DIR)
SKIP_INSTALL = NO
TARGETED_DEVICE_FAMILY = 1
IPHONEOS_DEPLOYMENT_TARGET = 15.0

// Linking
DEAD_CODE_STRIPPING = YES
COPY_PHASE_STRIP = YES
STRIP_INSTALLED_PRODUCT = YES
STRIP_SWIFT_SYMBOLS = YES

// Packaging
PRODUCT_NAME = WorkoutTracker
PRODUCT_BUNDLE_IDENTIFIER = com.yourcompany.workouttracker
GENERATE_INFOPLIST_FILE = YES
INFOPLIST_FILE = WorkoutTracker/Info.plist
MARKETING_VERSION = 1.0.0
CURRENT_PROJECT_VERSION = 1

// Search Paths
ALWAYS_SEARCH_USER_PATHS = NO
FRAMEWORK_SEARCH_PATHS = $(inherited)

// Signing
PROVISIONING_PROFILE_SPECIFIER = // TODO: Add your provisioning profile specifier

// Swift Compiler
SWIFT_VERSION = 5.0
SWIFT_TREAT_WARNINGS_AS_ERRORS = YES

// Asset Compiler
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_GLOBAL_ACCENT_COLOR_NAME = AccentColor

// Build Settings
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
ENABLE_NS_ASSERTIONS = NO
MTL_ENABLE_DEBUG_INFO = NO
SWIFT_ACTIVE_COMPILATION_CONDITIONS = RELEASE

// CloudKit
CLOUDKIT_ENABLED = YES
ENABLE_CLOUDKIT = YES

// Privacy
ENABLE_USER_SCRIPT_SANDBOXING = YES
